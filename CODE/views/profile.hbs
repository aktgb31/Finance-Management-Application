<!DOCTYPE html>
<html>

<head>
  <title>User Profile</title>
  <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no">
  <script type="text/javascript" src="js/jquery-1.12.4.min.js"></script>
  <link rel="stylesheet" type="text/css" href="css_dashboard/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="css_dashboard/bootstrap-theme.min.css">
  <link rel="stylesheet" type="text/css" href="css_dashboard/main.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
  <script type="text/javascript" src="js/bootstrap.min.js"></script>
  <script type="text/javascript" src="js/moment-with-locales.js"></script>
</head>

<body>
  {{> topHeader}}
  <div class="container-fluid">
    <div class="row content">
      {{> sideBar}}
      <br>
      <div class="col-sm-9 col-md-9 col-lg-10" id="contemt-main">
        <div class="row">
          <div class="col-sm-10" id="profile" style="display: flex; flex-direction: row;">
            <h1>Profile</h1>
          </div>
          <div class="col-sm-2">
            <form action="logout" method="post">
              <button type="submit"> Logout </button>
            </form>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <hr>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <div class="well">
              <div class="wrapper" style="display: flex; justify-content: center;">
                <form role="form">
                  <div class="form-group">
                    <div class="input-group" id="profileEdits">
                      <div class="profileImage" style="display: block; margin:0 auto;"></div>
                      <p></p>
                      <label>Name</label>
                      <input type="text" class="form-control editField" id="name" value="{{user.name}}" readonly>
                      <br>
                      <p></p>
                      <label>Email ID</label>
                      <input type="text" class="form-control editField" id="emailID" value="{{user.emailId}}" readonly>
                      <br>
                      <p></p>
                      <label>Password</label>
                      <div style="display: flex; flex-direction: row;">
                        <input type="password" class="form-control editField pass" value="{{user.pass}}" id="password"
                          readonly>
                        <i class="bi bi-eye-slash" id="passwordShow"
                          style="margin-left: -25px; margin-top: 5px; cursor: pointer; z-index: 3" hidden></i>
                      </div>
                      <p></p>
                      <br>
                      <button id="editBtn" type="button" style="display: block; margin:0 auto;">Edit Details</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <button id="delet"
              style="display: block; margin:0 auto; background-color:	#DC3545; border: 1px solid #DC3545;"> Delete
              Account </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
<script>

  var name, val;

  $(document).ready(function() {

    name = $('#nameOfUser').text().split(" ");
    var images = document.getElementsByClassName("profileImage");

    if(!(typeof name === 'string' || name instanceof String))
    {
      val = name[0].charAt(0) + name[1].charAt(0);
      for(i = 0; i < images.length; i += 1)
        images[i].textContent = val;
    }
    else
      for(i = 0; i < images.length; i += 1)
        images.item(i).textContent = name.charAt(0);
  });

  document.getElementById("editBtn").addEventListener("click", function () {
    var x = document.getElementById("profileEdits").getElementsByClassName("editField");
    for (i = 0; i < x.length; i += 2) {
      x.item(i).readOnly = !x.item(i).readOnly;
    }
    var y = document.getElementById("passwordShow");
    y.hidden = !y.hidden;
    if (!y.hidden)
      this.textContent = "Save Details";
    else
    {
      this.textContent = "Edit Details";

      var nme = document.createElement('input');
      nme.setAttribute('value', document.getElementById('name').getAttribute('value'));
      nme.setAttribute('name', 'name');

      var pass = document.createElement('input');
      pass.setAttribute('value', document.getElementById('password').getAttribute('value'));
      pass.setAttribute('name', 'password');

      var form = document.createElement('form');
      form.setAttribute('method', 'post');
      form.setAttribute('action', '/user/profile');
      form.appendChild(nme);
      form.appendChild(pass);
      form.style.display = 'hidden';
      document.body.appendChild(form);
      form.submit();
    }
  }.bind(document.getElementById("editBtn")));

  document.getElementById("passwordShow").addEventListener("click", function () {
    var x = document.getElementById("password");
    if (x.getAttribute("type") == "password")
      x.setAttribute("type", "text");
    else
      x.setAttribute("type", "password");
    this.classList.toggle("bi-eye");
  }.bind(document.getElementById("passwordShow")));

  document.getElementById("delet").addEventListener("click", function () {
    confirm("Are you sure?");
  });
</script>
<script type="text/javascript" src="js/profile.js"></script>

</html>